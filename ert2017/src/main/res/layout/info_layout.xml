<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/button_table">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textSize="20sp"
        android:textColor="@color/textColor"
        android:textStyle="italic"
        android:textAlignment="center"
        android:background="@color/colorPrimaryDark"
        android:text="@string/header"
        />
        <TextView
            android:id="@+id/header_for_duas"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@id/header"
            android:layout_marginTop="20dp"
            android:textColor="@color/textColor"
            android:background="@color/colorPrimaryDark"
            />
        <TextView
            android:id="@+id/help"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textColor"
            android:layout_below="@id/header"
            android:layout_marginTop="50dp"
        />
        <TextView
            android:id="@+id/header_for_other"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textColor="@color/textColor"
            android:layout_below="@id/help"
            android:layout_marginTop="20dp"
            android:background="@color/colorPrimaryDark"
            />
        <TextView
            android:id="@+id/other"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textColor"
            android:layout_below="@id/help"
            android:layout_marginTop="30dp"
            />
        <TextView
            android:id="@+id/header_for_credits"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textColor="@color/textColor"
            android:layout_below="@id/other"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimaryDark"
            />
        <TextView
            android:id="@+id/credits"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textColor"
            android:layout_below="@id/other"
            android:layout_marginTop="30dp"
            />
    </RelativeLayout>
    </ScrollView>

    <TableLayout
        android:id="@+id/button_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:stretchColumns="*"
        android:background="@color/colorPrimary"
        >
        <TableRow>

            <Button
                android:id="@+id/home"
                android:layout_width="45dp"
                android:layout_height="40dp"
                style="@style/button_text"
                android:background="@drawable/custom_button2"
                android:text="@string/crrnt"
                />
            <Button
                android:id="@+id/calendar"
                android:layout_width="15dp"
                android:layout_height="40dp"
                style="@style/button_text"
                android:background="@drawable/custom_button2"
                android:text="@string/cal"
                />
            <Button
                android:id="@+id/about_us"
                android:layout_width="8dp"
                android:layout_height="40dp"
                style="@style/button_text"
                android:background="@drawable/custom_button2"
                android:text="Masjids"
                />
            <Button
                android:id="@+id/info"
                android:layout_width="8dp"
                android:layout_height="40dp"
                style="@style/button_text"
                android:background="@drawable/custom_button2"
                android:text="Duas"
                />
        </TableRow>
    </TableLayout>
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id4">
    </com.google.android.gms.ads.AdView>
</RelativeLayout>
